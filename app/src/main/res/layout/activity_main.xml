<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00aafe">

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_weight="9"
            android:text="어서오세요, xxx님!"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_margin="7dp"
            android:text="Sign Out" />

    </LinearLayout>





    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:text="현재까지 수집한 데이터: 0/21600"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/trainText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="등록된 딥러닝 모델이 없습니다."
            android:textSize="20dp" />

        <Button
            android:id="@+id/trainButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:background="#ffffff"
            android:textColor="#0066fe"
            android:text="모델만들기"
            android:textSize="15dp"/>
    </LinearLayout>

    <Switch
        android:id="@+id/dataSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="데이터 수집하기"
        android:padding="10dp"
        android:textSize="20dp"
        android:switchMinWidth="50dp"
        android:textColor="#0066fe" />

    <Switch
        android:id="@+id/predictSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보안기능 켜기"
        android:padding="10dp"
        android:textSize="20dp"
        android:switchMinWidth="50dp"
        android:textColor="#0066fe" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/fingerprint_dialog_fp_to_error" />


</LinearLayout>